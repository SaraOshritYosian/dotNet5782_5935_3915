<Window x:Class="PL.StationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="StationWindow" Height="450" Width="500">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF404146" Offset="0.009"/>
                <GradientStop Color="#FF45464B" Offset="1"/>
                <GradientStop Color="#FF888888" Offset="0.646"/>
                <GradientStop Color="#FF868686" Offset="0.284"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid x:Name="GridAddSattion" HorizontalAlignment="Stretch" Height="auto" Grid.Row="0"
              
                   VerticalAlignment="Stretch" Width="auto" d:IsHidden="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="231*"/>
                <ColumnDefinition Width="135*"/>

                <ColumnDefinition Width="134*"/>
            </Grid.ColumnDefinitions>






            <Label x:Name="Labelname" Content="Name" HorizontalAlignment="Left" Margin="92,120,0,0" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="18" Height="31" Width="69"/>
            <Label Content="Id" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Arial Black" Height="31" Width="29"/>
            <Label x:Name="LabelLocation" Content="Location" HorizontalAlignment="Left" Margin="92,190,0,0" VerticalAlignment="Top" Height="38" Width="110" FontFamily="Arial Black" FontSize="18"/>
            <Label x:Name="Labelslote" Content="amount charge slots" HorizontalAlignment="Left" Margin="9,260,0,0" VerticalAlignment="Top" Height="45" Width="232" FontFamily="Arial Black" FontSize="18" Grid.ColumnSpan="2"/>
            <TextBox x:Name="TextLocation1" Grid.Column="1" HorizontalAlignment="Left" Margin="0,190,0,0" VerticalAlignment="Top" Width="120" Height="28"/>
            <TextBox x:Name="TextLocation2" Grid.Column="2" HorizontalAlignment="Left" Margin="3,191,0,0" VerticalAlignment="Top" Width="120" Height="28"/>
            <TextBox x:Name="TexName"  Grid.Column="1" HorizontalAlignment="Left" Margin="0,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="24"/>
            <TextBox x:Name="TextId" Grid.Column="1" HorizontalAlignment="Left" Margin="0,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="24" Width="120"/>
            <TextBox x:Name="textSlots" Grid.Column="1" HorizontalAlignment="Left" Margin="0,260,0,0" VerticalAlignment="Top" Height="24" Width="120"/>
            <Button x:Name="ButtonCancel" Content="X" Grid.Column="2" HorizontalAlignment="Right" Margin="0,10,5,0" VerticalAlignment="Top" Height="26" Width="31" FontSize="18" FontFamily="Arial Black"  Background="#FFFB1C1C" Click="ButtonCancel_Click" BorderBrush="{x:Null}"/>
            <Button x:Name="ButtonAdd" Content="Add" Grid.Column="2" HorizontalAlignment="Left" Margin="8,360,0,14" Width="103" FontSize="18" FontFamily="Arial Black" Click="ButtonAdd_Click" BorderBrush="{x:Null}" />
            <Label x:Name="Label3" Content="Please fill in" Grid.Column="1" HorizontalAlignment="Left" Margin="0,139,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.382,2.679" Background="Transparent" Foreground="#FFF71616" Height="26" Width="72"/>
            <Label x:Name="Label2" Content="Please fill in" Grid.Column="1" HorizontalAlignment="Left" Margin="0,212,0,0" VerticalAlignment="Top" Foreground="#FFF11010" Height="26" Width="72"/>
            <Label x:Name="Label1" Content="Please fill in" Grid.Column="1" HorizontalAlignment="Left" Margin="0,278,0,0" VerticalAlignment="Top" Foreground="#FFF31111" Height="26" Width="72"/>
            <Label x:Name="Label4" Content="Please fill in" Grid.Column="1" HorizontalAlignment="Left" Margin="0,69,0,0" VerticalAlignment="Top" Foreground="#FFF31111" Height="26" Width="72"/>
            <Label x:Name="Label5" Content="drone is exsist" Grid.Column="1" HorizontalAlignment="Left" Margin="0,69,0,0" Foreground="#FFF31111" VerticalAlignment="Top" Height="26" Width="85"/>
            <Label x:Name="Label6"  Content="Please fill in"  Grid.Column="2" HorizontalAlignment="Left" Margin="0,212,0,0"  Foreground="#FFF11010" Height="26" Width="72" VerticalAlignment="Top"/>



        </Grid>



        <Grid x:Name="GridUpStation" HorizontalAlignment="Stretch" Height="auto" Grid.Row="0"
                   VerticalAlignment="Stretch" Width="auto">

            <Grid.RowDefinitions>
                <RowDefinition Height="93*"/>
                <RowDefinition Height="115*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="283*"/>
                <ColumnDefinition Width="217*"/>
            </Grid.ColumnDefinitions>


            <Label Content="id:" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Arial Black" FontWeight="Bold" Height="28" Width="31"/>
            <TextBox x:Name="IdText" Text="{Binding Id, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  HorizontalAlignment="Center" Margin="0,34,0,0" VerticalAlignment="Top" Height="20" Width="73" BorderBrush="{x:Null}" Foreground="Black" SelectionBrush="Black" SelectionTextBrush="Black" CaretBrush="Black" FontFamily="Arial Black" FontWeight="Bold" FontSize="15"/>
            <Label Content="Location:" HorizontalAlignment="Left" Margin="10,108,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Arial Black" FontWeight="Bold" Height="28" Width="92"/>
            <Label x:Name="LocationText" Content="" HorizontalAlignment="Left" Margin="110,91,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial Black" Width="171" Height="98" FontSize="16"/>
            <Rectangle HorizontalAlignment="Center" Height="192" Margin="0,18,0,0" Grid.Row="1" VerticalAlignment="Top" Width="246" Fill="#FFCE6363"/>
            <Label Content="name:" HorizontalAlignment="Center" Margin="-100,38,0,0" Grid.Row="1" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="16" Width="134" Height="28"/>
            <Label x:Name="lbb" Content="" HorizontalAlignment="Center" Margin="-80,70,0,0"  Grid.Row="1" VerticalAlignment="Top" Width="164" FontFamily="Arial Black" AutomationProperties.ItemStatus="" ContentStringFormat="" Height="88" FontSize="16"/>
            <TextBox x:Name="TexName1"  Text="{Binding Name, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" HorizontalAlignment="Center" Margin="130,42,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="96" Height="24" FontFamily="Arial Black" FontWeight="Bold" FontSize="16"/>
            <ListView x:Name="ListViewDroneInCharge" Grid.Column="1" HorizontalAlignment="Center"  Grid.Row="1" Margin="0,5,0,48" Width="202" Background="#FFCE6363" MouseDoubleClick="ListView_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button Content="x" Grid.Column="1" HorizontalAlignment="Right" Margin="0,5,10,0" VerticalAlignment="Top" Background="#FFCE6363" BorderBrush="{x:Null}" Height="28" Width="28"  FontFamily="Arial Black" FontWeight="Bold" FontSize="14" Click="Button_Click"/>
            <Label Content="List of Drons in charge:" Grid.Column="1" HorizontalAlignment="Center" Margin="0,168,0,0" VerticalAlignment="Top" Height="40" Width="234" FontFamily="Arial Black" FontSize="16" Grid.RowSpan="2" FontWeight="Bold"/>
            <Button x:Name="Save" Content="Save" HorizontalAlignment="Center" Margin="0,164,0,0" Grid.Row="1" VerticalAlignment="Top" Background="#FFF6F6F6" FontFamily="Arial Black" Height="29" Width="70" Click="Save_Click" FontWeight="Bold"/>
            <TextBox x:Name="ChargeSlote" HorizontalAlignment="Center" Margin="155,80,0,0" Grid.Row="1" VerticalAlignment="Top" Width="73" Height="27" FontFamily="Arial Black" FontWeight="Bold" FontSize="16"/>

        </Grid>


    </Grid>
</Window>
