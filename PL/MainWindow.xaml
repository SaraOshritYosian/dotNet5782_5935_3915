<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="680" Width="800">
    <Grid>
        <Grid>

            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA8C0C4"/>
                    <GradientStop Color="#FFA99584" Offset="0.936"/>
                    <GradientStop Color="#FFEEE7D6" Offset="0.5"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Image HorizontalAlignment="Center" Height="680" VerticalAlignment="Top" Width="800" Source="/drone-delivery-supply-chain-1200px-1024x690.jpg" RenderTransformOrigin="0.5,0.5" Margin="0,0,0,0" Stretch="Fill">
                <Image.OpacityMask>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFADC2C4" Offset="0.012"/>
                        <GradientStop Color="#FFA08870" Offset="0.954"/>
                        <GradientStop Color="#FFF8EEDC" Offset="0.503"/>
                    </LinearGradientBrush>
                </Image.OpacityMask>
            </Image>
            <Button Content="Enter" HorizontalAlignment="Center" Margin="0,500,0,0" VerticalAlignment="Top" Height="67" Width="171" Click="Button_Click" FontFamily="Cooper Black" FontSize="48">
                <Button.Background>
                    <ImageBrush/>
                </Button.Background>
            </Button>

        </Grid>


    </Grid>
</Window>
