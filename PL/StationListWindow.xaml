<Window x:Class="PL.StationListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="StationListWindow" Height="600" Width="800">
    <Grid x:Name="main">
        <Grid.RowDefinitions>
            <RowDefinition Height="111*"/>
            <RowDefinition Height="106*"/>
        </Grid.RowDefinitions>
        <Grid Name="UpGrid" Height="auto" Grid.Row="0" Width="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="87*"/>
                <ColumnDefinition Width="113*"/>
            </Grid.ColumnDefinitions >


            <DataGrid x:Name="DataGrideStation" Grid.Column="0" MouseDoubleClick="DataGrideStation_MouseDoubleClick_1"/>
            <Image HorizontalAlignment="Center" Height="395" Margin="0,-31,0,0" VerticalAlignment="Top" Width="630" Source="/map.jpg"  Grid.Column="1"/>
        </Grid>



        <Grid Name="AGrid" Height="auto" Grid.Row="1" Width="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="267*"/>
                <ColumnDefinition Width="533*"/>
            </Grid.ColumnDefinitions >

            <Button Content="Button" HorizontalAlignment="Left" Margin="27,200,0,0" VerticalAlignment="Top" Height="68" Width="128" Click="Button_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/back-arrow_1f519.png"/>
                </Button.Background>
            </Button>
        </Grid>



    </Grid>
</Window>
